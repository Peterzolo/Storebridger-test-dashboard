{
  "name": "storebridger-backend",
  "version": "1.0.0",
  "description": "The backend of the Storebridger app",
  "scripts": {
    "start": "node build/bin/www/server.js",
    "start:dev": "export NODE_ENV=development npm run build && npm run serve",
    "serve": "node -r dotenv/config build/bin/www/server.js",
    "build": "npm run clean && npm run build-ts && npm run copy-assets && npm run seeding",
    "prewatch": "npm run copy-assets && npm run seeding",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon src/bin/www/server.ts",
    "clean": "rm -rf ./build",
    "build-ts": "tsc --project .",
    "watch-ts": "tsc -w",
    "lint": "eslint . --ext .js,.ts --fix .",
    "upgrade": "npm update --save-dev && npm update --save",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "prepare": "husky install",
    "copy-assets": "node scripts/copy_assets.js",
    "seeding": "node build/databases/seeding/index.js"
  },
  "author": "Hameed Damee",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@types/express-handlebars": "^6.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/gapi": "^0.0.43",
    "@types/hogan.js": "^3.0.1",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^28.1.8",
    "@types/joi": "^17.2.3",
    "@types/multer": "^1.4.7",
    "amqplib": "^0.10.0",
    "aws-sdk": "^2.1168.0",
    "axios": "^1.1.3",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.32.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-random-string": "3.3.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-handlebars": "^6.0.6",
    "fs-extra": "^10.1.0",
    "google-auth-library": "^8.6.0",
    "googleapis": "^109.0.0",
    "helmet": "^5.1.0",
    "html-to-text": "^8.2.1",
    "i18next": "^21.9.1",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fs-backend": "^1.1.5",
    "inversify": "^6.0.1",
    "joi": "^17.6.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "mongoose": "^6.4.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.5.1",
    "source-map-support": "^0.5.21",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.8",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.3",
    "@types/source-map-support": "^0.5.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  }
}
